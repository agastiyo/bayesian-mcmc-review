@article{akeretCosmoHammerCosmologicalParameter2013,
  title = {{{CosmoHammer}}: {{Cosmological}} Parameter Estimation with the {{MCMC Hammer}}},
  shorttitle = {{{CosmoHammer}}},
  author = {Akeret, Jo{\"e}l and Seehars, Sebastian and Amara, Adam and Refregier, Alexandre and Csillaghy, Andr{\'e}},
  year = 2013,
